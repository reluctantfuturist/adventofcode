{
  "compilerOptions": {
    "target": "ESNext",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": ".",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "@types/jest"],
    "typeRoots" : ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["lib/*"]
    },
  },
  "include": [
    "src/**/*",
    "**/src/**/*"
, "lib/**/*"  ],
  "exclude" : [
    "src/**/*.spec.ts",
    "**/src/**/*.spec.ts"

  ]
}